<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <title>Document</title>
</head>
<body>
    <h1>회원가입</h1>
    <form name="add-form">
        <label for="name">이름 : </label>
        <input type="text" id="name" placeholder="이름을 입력해주세요."><br/>
        <label for="id">아이디 : </label>
        <input type="text" id="userid" placeholder="아이디를 입력해주세요"><br/>
        <label for="password">비밀번호 : </label>
        <input type="password" id="pw" placeholder="비밀번호를 입력해주세요."><br/>
        <button type="button" onclick="yoyoyo()">회원가입~</button>
    </form>

    <script>
        function yoyoyo(id){
            const form = document.forms['add-form']
            axios({
                method:'POST',
                url: '/user/write',
                data: {
                    id : Number(id),
                    name: form.name.value,
                    userid: form.userid.value,
                    pw: form.pw.value,
                },
            }).then(res =>{
                console.log(res.data);
                alert("가입완료되었습니다.")
                window.location.href ='/user'
            })
        }
    </script>
</body>
</html>