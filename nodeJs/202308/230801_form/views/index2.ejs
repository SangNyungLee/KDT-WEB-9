            <select name="month">
                <%for(let i=1 ; i<=12 ; i++){%>
                    <option value="<%=i%>"><%=i%></option>
                <%}%>
                월
    
            </select>
            <select name="day">
                <%for(let i=1 ; i<=31 ; i++){%>
                    <option value="<%=i%>"><%=i%></option>
                <%}%>
                일
