<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <title>Document</title>
</head>
<body>
    <h1>로그인</h1>
    <form name="signin-form" method="post">
        <label for="userid">아이디</label>
        <input type="text" id="userid"><br/>
        <label for="pw">비밀번호</label>
        <input type="password" id="pw">
        <button type="button" onclick="signin()">로그인하기</button>
    </form>
    <script>
        
        function signin(){
            const form = document.forms['signin-form'];
            axios({
                method : 'POST',
                url : '/signin',
                data :{
                    userid : form.userid.value,
                    pw : form.pw.value,
                }
            }).then((res)=>{
                // console.log(res.data)
                console.log("이름", res.data.name)
                console.log("아이디", res.data.id)
                console.log("토큰", res.data.token)
                
                // console.log("비번", res.data.pw)
                // localStorage.setItem("login", res.data.token);
                // localStorage.setItem("id", res.data.userid);
                alert("로그인 되었습니다.")
                // window.location.href="/"
            })    
        }
    </script>
</body>
</html>